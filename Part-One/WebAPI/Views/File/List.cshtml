@model FileInfo[]
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create">Create</a>

<div class="row">
	<div class="col-4">
		@await Component.InvokeAsync("News");
	</div>
	<div class="col-8">
		<table class="table table-hover table-bordered text-center">
			<thead>
				<tr>
					<th>Ad</th>
					<th>Oluşturulma Zamanı</th>
					<th>Path</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.CreationTime</td>
						<td>@item.FullName</td>
						<td>
							<a asp-action="Remove" asp-route-fileName="@item.Name" class="btn btn-primary">Remove</a>
						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>
</div>

